package HW;

public class Phone {
	
String made;
String color;
double price;
String weight;
String model;


void call(){
	System.out.println("The phone "+made+ " can make a calls.");
}
void takePictures() {
	System.out.println("The phone "+made+" "+model+" can take a pictures");
}

	
public static void main (String[] args) {
	Phone iPhone=new Phone();
	iPhone.made="Apple";
	iPhone.price=800.00;
	iPhone.model="IPhone 5";
	iPhone.color="black";
	System.out.println("The phone "+iPhone.model+" has "+iPhone.color+" and costs "+iPhone.price);
	iPhone.takePictures();
}

}
